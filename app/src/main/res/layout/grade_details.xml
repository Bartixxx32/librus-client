<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grade_details_grade_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ocena"/>
        <TextView
            android:id="@+id/grade_details_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grade_details_weight_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waga"/>
        <TextView
            android:id="@+id/grade_details_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grade_details_category_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategoria"/>

        <TextView
            android:id="@+id/grade_details_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sprawdzian"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grade_details_subject_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Przedmiot"/>
        <TextView
            android:id="@+id/grade_details_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="filozofia"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grade_details_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Komentarz" />

        <TextView
            android:id="@+id/grade_details_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Naprawdę WOW!"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"/>
        <TextView
            android:id="@+id/grade_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wtorek, 11 września 2001"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data dodania"/>
        <TextView
            android:id="@+id/grade_details_addDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19:21, czwartek, 13 września 2001"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodana przez"/>
        <TextView
            android:id="@+id/grade_details_addedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ktośtam Jakiśtam"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>