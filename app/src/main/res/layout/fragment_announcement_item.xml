<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_announcement"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_announcement_item"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@color/cardview_dark_background"
            android:tint="@color/white"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/announcementTeacherName"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="AŻ"
            android:textSize="30dp"/>

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/announcementSubject"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:text="Ogłoszenie"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16dp"
            android:layout_marginTop="8dp"/>

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/announcementSubject"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/announcementContentShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space"
            android:text="Uczniowie Adam Żbikowski i Szymon Wysocki napisali własną aplikację mobilną!"
            android:textColor="?android:attr/textColorSecondary"
            android:minLines="1"
            android:maxLines="3"/>

    </RelativeLayout>
</LinearLayout>

