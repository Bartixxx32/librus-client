<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_announcement_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    tools:context="pl.librus.client.AnnouncementDetailsFragment">

    <TextView
        android:id="@+id/fragment_announcement_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/three_line_list_item_date"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="@string/announcement"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:transitionName="three_line_list_item_title" />
</FrameLayout>
